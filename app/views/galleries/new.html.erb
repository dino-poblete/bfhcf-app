<%= cloudinary_js_config %>

<%= title('Add Album') %>
<div class="content">
  <div class="container">

    <h2>New Album</h2>
    <hr />

    <div class="row">
      <div class="col-md-12 col-sm-12">
        <div class="cwell">
          <!-- Contact form -->
          <h5>Add New Album</h5>
          <div class="form">

            <%= form_for @gallery, html: {class: "form-horizontal", multipart: true } do |f| %>

                <%= render 'new_form', f: f %>

                <div class="form-group">
                  <!-- Buttons -->
                  <div class="col-md-9 col-md-offset-3">
                    <%= f.submit "Create", class:"btn btn-default" %>
                  </div>
                </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>


    <%= link_to 'Back', list_gallery_index_path %>

  </div>
</div>