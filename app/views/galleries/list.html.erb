<%= title('Gallery') %>

<div class="content">
  <div class="container">

    <h2>Listing Albums</h2>
    <hr />

    <% unless @galleries.blank?  %>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th>Title</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <% @galleries.each do |gallery| %>
              <tr>
                <td><%= gallery.title %></td>
                <td><%= link_to 'Show', album_path(gallery) %></td>
                <td><%= link_to 'Edit', edit_album_path(gallery) %></td>
                <td><%= link_to 'Delete', gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
    </div>
    <%= will_paginate %>
    <% else  %>
        <p>No Albums to Display</p>
    <% end  %>
    <p><%= link_to 'New album', new_gallery_path %></p>
  </div>
</div>




