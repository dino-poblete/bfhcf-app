<%= title('Posts') %>

<div class="content">
  <div class="container">

    <h2>Listing Posts</h2>
    <hr />
    <% if !flash.empty? %>
        <div class="alert alert-success"> <%= notice %></div>
    <% end  %>

    <% unless @posts.blank?  %>
        <table class="table table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Created Date</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <% @posts.each do |post| %>
              <tr>
                <td><%= post.title %></td>
                <td><%= User.find_by_id(post.user_id).full_name %></td>
                <td><%= format_short_date(post.created_at) %></td>
                <td><%= link_to 'Show', post %></td>
                <td><%= link_to 'Edit', edit_post_path(post) %></td>
                <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
          </tbody>
        </table>

        <%= will_paginate %>
    <% else  %>
        <p>No posts to Display</p>
    <% end  %>
    <p><%= link_to 'New post', new_post_path %></p>
  </div>
</div>




