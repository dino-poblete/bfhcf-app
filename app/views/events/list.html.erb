<%= title('Events') %>

<div class="content">
  <div class="container">

    <h2>Listing Events</h2>
    <hr />


    <table class="table table-striped table-bordered table-hover">
      <thead>
      <tr>
        <th>Title</th>
        <th>Ministry</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Picture</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @events.each do |event| %>
          <tr>
            <td><%= event.title %></td>
            <td><%= event.ministry %></td>
            <td><%= event.start_date.to_formatted_s(:long) %></td>
            <td><%= event.end_date.to_formatted_s(:long) %></td>
            <td><%= image_tag(event.picture_url(:thumbnail)) %></td>
            <td><%= link_to 'Show', event %></td>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <%= will_paginate %>
    <%= link_to 'New event', new_event_path %>
  </div>
</div>




