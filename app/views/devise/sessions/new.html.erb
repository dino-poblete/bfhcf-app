<div class="content">
  <div class="container">

    <div class="register">
      <div class="row">

        <div class="col-md-12">
          <div class="lrform">
            <h5>Login to your Account</h5>
            <div class="form">
              <!-- Login form (not working)-->

              <%= form_for resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"} do |f| %>

                  <div class="form-group">
                    <%= f.label :email, class:"control-label col-md-3" %>
                    <div class="col-md-9">
                      <%= f.text_field :email, class:"form-control", id:"email", autofocus: true %>
                    </div>
                  </div>

                  <div class="form-group">
                    <%= f.label :password, class:"control-label col-md-3" %>
                    <div class="col-md-9">
                      <%= f.password_field :password, class:"form-control", id:"password", autocomplete: "off" %>
                    </div>
                  </div>
                  <% if devise_mapping.rememberable? -%>
                  <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                      <label class="checkbox-inline">
                        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
                      </label>
                    </div>
                  </div>
                  <% end %>
                  <div class="form-group">
                    <!-- Buttons -->
                    <div class="col-md-9 col-md-offset-3">
                      <%= f.submit "Sign in", class:"btn btn-default" %>

                    </div>
                  </div>
              <% end %>



            </div>
          </div>

        </div>
      </div>
    </div>
    </div>
  </div>


