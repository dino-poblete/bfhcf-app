<%= title('Sign Up') %>

<div class="content">
  <div class="container">

    <h2>New User</h2>
    <hr />


    <div class="row">
      <div class="col-md-12 col-sm-12">
        <div class="cwell">
          <!-- Contact form -->
          <h5>Add New User</h5>
          <div class="form">

            <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"} do |f| %>


                <div class="form-group">
                  <div class="col-md-12">
                    <%= devise_error_messages! %>
                  </div>
                </div>

                <div class="form-group">
                  <%= f.label :avatar, class:"control-label col-md-3" %>
                  <div class="col-md-9">
                    <% if @user.avatar.blank? %>
                        <%= image_tag "people/default.jpg", alt: "No Avatar Yet" %>
                    <% else %>
                        <%= image_tag @user.avatar.url(:standard), alt: "No Avatar Yet" %>
                    <% end  %>
                    <%= f.file_field :avatar, class:"form-control" %>
                    <%= f.hidden_field :avatar_cache %>
                  </div>
                </div>

                <div class="form-group">
                  <%= f.label :last_name, class:"control-label col-md-3" %>
                  <div class="col-md-6">
                    <%= f.text_field :last_name, class:"form-control", id:"last_name" %>

                  </div>
                </div>

                <div class="form-group">
                  <%= f.label :first_name, class:"control-label col-md-3" %>
                  <div class="col-md-6">
                    <%= f.text_field :first_name, class:"form-control", id:"first_name" %>

                  </div>
                </div>

                <div class="form-group">
                  <%= f.label :email, class:"control-label col-md-3" %>
                  <div class="col-md-6">
                    <%= f.text_field :email, class:"form-control", id:"email" %>

                  </div>
                </div>

                <div class="form-group">
                  <%= f.label :password, class:"control-label col-md-3" %>
                  <div class="col-md-6">
                    <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"password" %>

                  </div>
                </div>

                <div class="form-group">
                  <%= f.label :password_confirmation, class:"control-label col-md-3" %>
                  <div class="col-md-6">
                    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", id:"password_confirmation" %>

                  </div>
                </div>

                <div class="form-group">
                  <!-- Buttons -->
                  <div class="col-md-9 col-md-offset-3">
                    <%= f.submit "Create User", class:"btn btn-default" %>
                  </div>
                </div>
            <% end %>


          </div>
        </div>
      </div>
    </div>


    <%= link_to 'Back', users_path %>
    <%= render "devise/shared/links" %>
  </div>
</div>


