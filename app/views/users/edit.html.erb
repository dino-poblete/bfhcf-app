<%= title('Edit User') %>

    <h2>Update User</h2>
    <hr />


    <div class="row">
      <div class="col-md-12 col-sm-12">
        <div class="cwell">
          <!-- Contact form -->
          <h5>Update User</h5>
          <div class="form">


            <%= form_for @user, html: {class: "form-horizontal"} do |f| %>

                <%= render 'form', f: f %>

                <div class="form-group">
                  <!-- Buttons -->
                  <div class="col-md-9 col-md-offset-3">
                    <%= f.submit "Update", class:"btn btn-default" %>
                  </div>
                </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>

    <%= link_to 'Show', @user %> |
    <%= link_to 'Back', users_path %>
