<%= title('Users') %>

<div class="content">
  <div class="container">

    <h2>Listing Users</h2>
    <hr />

    <% unless @users.blank?  %>
    <table class="table table-striped table-bordered table-hover">
      <thead>
      <tr>
        <th>Last name</th>
        <th>First name</th>
        <th>Email</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @users.each do |user| %>
          <tr>
            <td><%= user.last_name %></td>
            <td><%= user.first_name %></td>
            <td><%= user.email %></td>
            <td><%= link_to 'Show', user %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <%= will_paginate %>
    <% else  %>
        <p>No Users to Display</p>
    <% end  %>
    <p><%= link_to 'New User', signup_path %></p>
  </div>
</div>




