<%= title('Sign Up') %>

    <h2>New User</h2>
    <hr />


    <div class="row">
      <div class="col-md-12 col-sm-12">
        <div class="cwell">
          <!-- Contact form -->
          <h5>Add New User</h5>
          <div class="form">

            <%= form_for (@user), url: post_signup_path, html: {class: "form-horizontal"} do |f| %>

                <%= render 'form', f: f %>


                <div class="form-group">
                  <!-- Buttons -->
                  <div class="col-md-9 col-md-offset-3">
                    <%= f.submit "Create User", class:"btn btn-default" %>
                  </div>
                </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>


    <%= link_to 'Back', users_path %>
