<%= title('Sign in') %>
<div class="content">
  <div class="container">

    <h2>Sign In</h2>
    <hr />

    <div class="row">
      <div class="col-md-12 col-sm-12">
        <div class="cwell">
          <!-- Contact form -->
          <h5>Enter Credentials</h5>
          <div class="form">


            <%= form_tag sessions_path, class: "form-horizontal" do %>

                <% if !flash.empty? %>
                    <% flash.each do |key, value| %>
                        <%= content_tag(:div, value, class: "alert alert-#{key}") %>
                    <% end %>
                    <hr/>
                <% end %>

                <div class="form-group">

                  <%= label_tag :email, nil, class:"control-label col-md-3" %>
                  <div class="col-md-9">
                    <%= text_field_tag :email, params[:email], class:"form-control", id:"email" %>
                  </div>
                </div>

                <div class="form-group">
                  <%= label_tag :password, nil, class:"control-label col-md-3" %>
                  <div class="col-md-9">
                    <%= password_field_tag :password, nil, class:"form-control", id:"password" %>
                  </div>
                </div>

                <div class="form-group">
                  <!-- Buttons -->
                  <div class="col-md-9 col-md-offset-3">
                    <%= submit_tag "Sign in", class: "btn btn-default" %>
                  </div>
                </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>

  </div>
</div>