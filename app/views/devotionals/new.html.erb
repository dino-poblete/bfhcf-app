<div class="content">
  <div class="container">

    <h2>New Devotional</h2>
    <hr />

    <div class="row">
      <div class="col-md-12 col-sm-12">
        <div class="cwell">
          <!-- Contact form -->
          <h5>Add New Devotional</h5>
          <div class="form">


              <%= form_for @devotional, html: {class: "form-horizontal"} do |f| %>


                <%= render 'form', f: f %>


                  <div class="form-group">
                    <!-- Buttons -->
                    <div class="col-md-9 col-md-offset-3">
                      <%= f.submit "Create", class:"btn btn-default" %>
                      <button type="reset" class="btn btn-default">Reset</button>
                    </div>
                  </div>
              <% end %>

          </div>
        </div>
      </div>
    </div>


    <%= link_to 'Back', devotionals_path %>

  </div>
</div>