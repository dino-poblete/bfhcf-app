<%= title('Devotionals') %>

    <h2>Listing Devotionals</h2>
    <hr />

    <% if !flash.empty? %>
        <div class="alert alert-success"> <%= notice %></div>
    <% end  %>
    <% unless @devotionals.blank?  %>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Devotional Date</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <% @devotionals.each do |devotional| %>
              <tr>
                <td><%= devotional.title %></td>
                <td><%= User.find_by_id(devotional.user_id).full_name %></td>
                <td><%= format_short_date(devotional.posted_at) %></td>
                <td><%= link_to 'Show', display_devotional_path(devotional) %></td>
                <td><%= link_to 'Edit', edit_devotional_path(devotional) %></td>
                <td><%= link_to 'Delete', devotional, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
    </div>
    <%= will_paginate %>
    <% else  %>
        <p>No Devotionals to Display</p>
    <% end  %>
    <p><%= link_to 'New Devotional', new_devotional_path %></p>



